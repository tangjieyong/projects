<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="keyon.tang.dao.ShopCategoryDao">
  <select id="queryShopCategory" resultType="keyon.tang.entity.ShopCategory">
      SELECT
          shop_category_id,shop_category_name,shop_category_desc,shop_category_img,
          priority,create_time,last_edit_time,parent_id
      FROM tb_shop_category
      <where>
          shop_category_id=#{shopCatogoryId}
      </where>
  </select>

    <select id="queryShopCategoryList" resultType="keyon.tang.entity.ShopCategory">
        SELECT
        shop_category_id,shop_category_name,shop_category_desc,shop_category_img,
        priority,create_time,last_edit_time,parent_id
        FROM tb_shop_category
        <where>
           <if test="shopCategoryCondition.parentId !=null">
               and parent_id=#{shopCategoryCondition.parentId}
           </if>
        </where>
    </select>
</mapper>